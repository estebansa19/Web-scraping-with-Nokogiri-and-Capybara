<p id="notice"><%= notice %></p>

<h1>Hotels</h1>

<%= button_to 'Scrape', scrape_hotels_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reviews score</th>
      <th>Actual rate</th>
      <th>Last rate</th>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.reviews_score %></td>
        <td><%= hotel.actual_rate %></td>
        <td><%= hotel.last_rate %></td>
        <td><%= hotel.city_name %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
